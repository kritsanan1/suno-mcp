{
  "name": "suno-mcp",
  "version": "1.0.0",
  "description": "MCP Server for automated Suno AI music generation",
  "main": "src/suno_mcp/server.py",
  "type": "module",
  "scripts": {
    "start": "python -m suno_mcp.server",
    "dev": "python -m suno_mcp.server",
    "mcp": "python -m suno_mcp.server",
    "api": "python -m suno_mcp.server --api",
    "test": "python -m pytest",
    "test:watch": "python -m pytest --watch",
    "test:local": "powershell tests/local/test-mcp.ps1 && powershell tests/local/test-api.ps1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fastify": "^5.6.1",
    "playwright": "^1.40.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3"
  },
  "keywords": [
    "mcp",
    "suno",
    "ai",
    "music",
    "automation"
  ],
  "author": "Sandra Schipal",
  "license": "MIT"
}
